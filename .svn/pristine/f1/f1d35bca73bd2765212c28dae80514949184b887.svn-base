.banner{
    width: 100%;
    height: 480px;
    background: url("/images/homepage/topbg.png") no-repeat;
    background-position: center;
    background-size: cover;
}

.content{
    width: 100%;
    background: white;
    float: left;
}

.aboutUsContent{
    width: 1000px;
    margin-top:-311px;
    margin-left: auto;
    margin-right: auto;
    box-sizing: border-box;
    background: white;
    overflow-x: hidden;
}


.aboutUsPart{
    width: 100%;
    height: auto;
    margin-top: 50px;
}

.aboutUsPTitle{
    width: 100%;
    text-align: center;
    font-size: 28px;
}

.aboutUsPIntro{
    width: 795px;
    height: auto;
    margin-left: auto;
    margin-right: auto;
    font-size: 16px;
    line-height: 18px;
    color: #666666;
    margin-top: 30px;
}

.aboutUsMember{
    width: 100%;
    margin-top: 30px;
}

.memberPhoto{
    float: left;
    margin-right: 30px;
    margin-bottom: 50px;
    width: 313px;
    height: 198px;
    background: #d8d8d8;
}

.aboutUsNews{
    width: 100%;
    height: auto;
    margin-top: 42px;
    overflow:hidden;
}

.aboutUsNewsP{
    float: left;
    position: relative;
    width: 480px;
    height: 202px;
    margin:0px 10px 20px 10px;
    padding: 30px;
    border:1px solid #888888;
    box-sizing: border-box;
}

.aboutUsNewsTitle{
    width: 100%;
    font-size: 16px;
    line-height: 22px;
    font-weight: 600;
}

.aboutUsNewsIntro{
    width: 100%;
    font-size: 14px;
    color: #666666;
    height: 80px;
    overflow:hidden;
    margin-top: 10px;
    text-overflow: ellipsis;
}

.aboutUsNewslink{
    position: absolute;
    left: 30px;
    bottom: 30px;
    font-size: 14px;
    line-height: 20px;
}

.aboutUsNewslink a{
    color: #2a75ed;
}

.aboutUsNewslinkSource{
    position: absolute;
    right: 30px;
    bottom: 30px;
    font-size: 14px;
    line-height: 20px;
}

.moreNews{
    width: 100%;
    text-align: center;
    font-size: 16px;
    color: #2a75ed;
    line-height: 22px;
    margin-top: 10px;
    cursor: pointer;
}

.newsMorePart{
    display: none;
}

/*微信扫一扫展示模块*/
.wxScan {
    position: relative;
    float: left;
    width: 100%;
    height: 450px;
    margin-top: 50px;
    background: url("/images/homepage/bgdibu.png") no-repeat;
    background-position: center;
    background-size: cover;
    overflow: hidden;
}

